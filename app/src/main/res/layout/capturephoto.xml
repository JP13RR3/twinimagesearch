<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:padding="2dp"

            android:text="TWIN IMAGE SEARCH"
            android:textColor="#ffffff" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="#E7E7E7"

        android:layout_marginTop="50dp">
    <FrameLayout

        android:layout_width="192dp"
        android:layout_height="177dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/borde_redondeado"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_take_photo"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/camara"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar foto"
            android:layout_marginTop="115dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="37dp"
            android:textColor="#ffffff"
            android:padding="7dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="192dp"
        android:layout_height="177dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/borde_redondeado"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_upload_photo"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/cargarimagen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargar imagen"
            android:layout_marginTop="115dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="37dp"
            android:textColor="#ffffff"
            android:padding="7dp"/>

    </FrameLayout>
</FrameLayout>

    <Button
        android:id="@+id/btn_albums"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/boton_personalizado"
        android:text="Álbumes" />

    <Button
        android:id="@+id/btn_images"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/boton_personalizado"
        android:text="Imagenes" />

</RelativeLayout>