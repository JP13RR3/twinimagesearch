<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowImage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:padding="2dp"
            android:text="TWIN IMAGE SEARCH"
            android:textColor="#ffffff" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/selectAnotherButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boton_personalizado"
        android:text="Seleccionar otra" />

    <Button
        android:id="@+id/searchSimilarButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boton_personalizado"
        android:text="Buscar similares" />

</RelativeLayout>